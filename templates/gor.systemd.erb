[Unit]
Description=Gor traffic replay
After=network.target
Wants=network.target

[Service]
<%  @envvars.each do |k, v| %>
<%="Environment=#{k}='#{v}'" -%>
<%  end %>
User=<%= @gor_runuser %>
MemoryAccounting=true
MemoryLimit=<%= @gor_memorylimit %>
ExecStart=<%= @binary_path %> \
  <%=
@args.sort.map { |k,v|
  [v].flatten.map { |i|
    "#{k} #{i}"
  }
}.join(" \\\n  ")
%> \
>> /var/log/gor/gor.log 2>&1

[Install]
WantedBy=multi-user.target

